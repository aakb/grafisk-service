{% macro order_row(label, value) %}
  <table style="border-spacing: 0;border-collapse: collapse;padding: 0;vertical-align: top;text-align: left;border-top: 1px solid #ffffff;border-bottom: 1px solid #cccccc;width: 100%;">
    <tr style="padding: 0;vertical-align: top;text-align: left;">
      <td style="word-break: break-word;-webkit-hyphens: auto;-moz-hyphens: auto;hyphens: auto;padding: 10px;vertical-align: top;text-align: left;color: #222222;font-family: Helvetica, Arial, sans-serif;font-weight: normal;margin: 0;line-height: 2;font-size: 14px;border-collapse: collapse !important;">
        <strong>{{ label | trans }}</strong>: {{ value }}
      </td>
    </tr>
  </table>
{% endmacro %}

